<html>
  <head>
<% include ./head.ejs %>
  </head>
  <body>

<% include ./header.ejs %>
    <div class="container">
    <strong>id</strong>: <%= user.local.email %>, create your poll<br>

    <form action=<%= "/api/polls/edit/"+polls[0].pollname %> method="post">
        <div class="form-group">
            <h3><%= polls[0].pollname %></h3>
        </div>
   <div>

       <p><% polls %></p>

<table>
<% polls[0].hola.forEach( function(aux){ %>
<div>
    <tr>
        <td><label >Opcion: </label><input type="text" name="poll_ins[]" readonly value=<%= aux.name %> />
        </td><td><span>Votes: </span><input type="number" name="poll_vote[]" readonly value=<%= aux.votes %> />
           </td><td><span class="remove">Remove</span>
           </td></tr></div>
<% }); %>
    </table></div>
  
    <p id="here">
    </p>

    <input type="button" class="add" value="Add another option"> 
        <button type="submit" class="btn btn-warning btn-lg">Registrar</button>
    </form>
    </div>

<!--div id="model" class="hidden">
    <label>Opcion:</label> <input type="text" name="ins[]" value="">
    <span class="remove">Remove</span>
</div-->

<div id="model" class="hidden">
    <div id="decoro">
        <label >Opcion: </label><input type="text" name="poll_ins[]" value=""/>
        <label>Votes: </label><input type="number" name="poll_vote[]" value="0" readonly/>
        <span class="remove">Remove</span>
    </div>
</div>

    <footer>
      <% include ./footer.ejs %> 
    </footer> 

  </body>

<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script>

        $(".add").click(function() {
          $("#model").clone(true).insertBefore("#here").removeClass("hidden");
          //.attr("name", "ins[]")
            return false;
        });

        $(".remove").on("click",  function(){
            $(this).parent().parent().remove();
        });
    </script>

   <script type="text/javascript" src="/common/ajax-functions.js"></script>
    <script type="text/javascript" src="/controllers/pollController.client.js"></script>
    <script type="text/javascript" src="/controllers/userController.client.js"></script>
</html>
